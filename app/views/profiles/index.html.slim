  $(document).ready(function(){
    $('#ProfileUserList').click(function(e){
      e.preventDefault();
      $.ajax({
        type: 'GET',
        url: "profiles/index",
        success: function(response){
          console.log(response)
            $('#ProfileUserList').html(response);
        }

      })
    });
  });
